<div class="topic-index-wrapper">
  <div class="container">
    
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <div class="topic-index-single">
            <h2 class="topic-author">
              <%= @topic.user.name %>
            </h2>
            <%= image_tag @topic.image.url %>
            <% if !@topic.favorite_users.include?(current_user) %>
              <%= link_to favorites_path(topic_id: @topic.id), method: :post do %>
                <i class="far fa-heart like-btn"></i><%=@topic.favorites.count%>
              <% end %>
              <%else%>
                <%= link_to favorites_path(topic_id: @topic.id), method: :delete do %>
                  <i class="far fa-heart unlike-btn"></i><%=@topic.favorites.count%>
                <%end%>
            <% end %>
            <%= link_to new_topic_comment_path(topic_id: @topic.id) do %>
              <%= image_tag 'icons/comment.png', class: 'topic-index-icon ' %>
            <% end %>
            
            
            
            <% @topic.comments.each do |comment|%>
              <div>
                <%=comment.body%>
              </div>
            <%end%>
            
            <p class="topic-text">
              <%= @topic.description %>
            </p>
            
            <%= form_with model: [@topic,@comment],local: true do |f|%>
            <div>
              <%=f.text_field :body%>
            </div>
            <%=f.submit %>
            <%end%>
          </div>
        </div>
      </div>
    
  </div>
</div>

</div>